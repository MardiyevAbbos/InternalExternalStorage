<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internal Storage(TEXT)"
        android:textSize="22sp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/b_save_int"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Internal"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/b_read_int"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read Internal"
        android:layout_marginTop="10dp" />
    <Button
        android:id="@+id/b_delete_int"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Internal"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="External Storage(TEXT)"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/b_save_ext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save External"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/b_read_ext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read External"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/b_delete_ext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete External"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Photo in Internal or External"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/b_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Photo"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/b_call_permission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Call Permission"
        android:layout_marginTop="40dp"
        android:visibility="gone"/>

</LinearLayout>